<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/style_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:gravity="center"
            android:id="@+id/soraw"
            android:layout_margin="10dp"
            android:textColorHint="@android:color/holo_orange_light"
            android:textSize="40sp"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:id="@+id/juwap_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/juwap_2"
            app:layout_constraintBottom_toTopOf="@+id/juwap_3"
            app:layout_constraintTop_toBottomOf="@+id/soraw"
            android:layout_margin="10dp"
            android:onClick="basilganda"
            android:textSize="10sp"
            android:textColor="#d9ce0b"
            android:background="@drawable/style_2"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toEndOf="@+id/juwap_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/soraw"
            app:layout_constraintBottom_toTopOf="@+id/juwap_4"
            android:onClick="basilganda"
            android:id="@+id/juwap_2"
            android:layout_margin="10dp"
            android:textSize="10sp"
            android:textColor="#d9ce0b"
            android:background="@drawable/style_2"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/juwap_4"
            app:layout_constraintTop_toBottomOf="@+id/juwap_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="basilganda"
            android:id="@+id/juwap_3"
            android:layout_margin="10dp"
            android:textSize="10sp"
            android:textColor="#d9ce0b"
            android:background="@drawable/style_2"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toEndOf="@+id/juwap_3"
            app:layout_constraintTop_toBottomOf="@+id/juwap_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="basilganda"
            android:id="@+id/juwap_4"
            android:layout_margin="10dp"
            android:textSize="10sp"
            android:textColor="#d9ce0b"
            android:background="@drawable/style_2"
            />

</androidx.constraintlayout.widget.ConstraintLayout>